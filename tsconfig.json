{
    "compilerOptions": {
        "target"                : "es2016",
        "module"                : "commonjs",
        "lib"                   : [ "es2015", "dom" ],
        "declaration"           : true,
        "removeComments"        : true,
        "importHelpers"         : true,
        "strict"                : true,
        //"noImplicitAny"           : true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata" : true,
        "newLine"               : "LF",
        "outDir"                : "dist",
        "sourceMap"             : true
    },
    "exclude": [
        "node_modules",
        "dist",
        "src-client",
        "src/wwwroot/js"
    ]
}